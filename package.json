{
  "name": "secret-santa-paws",
  "version": "1.0.0",
  "description": "Handles Gift Exchanges for Dogs based on an existing Social Media meme.",
  "private": true,
  "sideEffects": false,
  "author": "Aydrian Howard <aydrian@gmail.com>",
  "license": "Apache-2.0",
  "prisma": {
    "seed": "node --require esbuild-register prisma/seed.ts"
  },
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "start": "cross-env NODE_ENV=production netlify dev",
    "typecheck": "tsc -b",
    "prepare": "husky install"
  },
  "dependencies": {
    "@netlify/functions": "^1.3.0",
    "@prisma/client": "^4.7.1",
    "@remix-run/netlify": "^1.8.1",
    "@remix-run/node": "^1.8.1",
    "@remix-run/react": "^1.8.1",
    "bcryptjs": "^2.4.3",
    "cross-env": "^7.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.8.1",
    "@remix-run/eslint-config": "^1.8.1",
    "@remix-run/serve": "^1.8.1",
    "@tailwindcss/typography": "^0.5.8",
    "@types/bcryptjs": "^2.4.2",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "esbuild-register": "^3.4.1",
    "eslint": "^8.27.0",
    "husky": "^8.0.0",
    "install": "^0.13.0",
    "npm": "^9.2.0",
    "postcss": "^8.4.19",
    "pretty-quick": "^3.1.3",
    "prisma": "^4.7.1",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=14"
  }
}
